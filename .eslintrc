{
    "extends": "airbnb",
    "plugins": [
        "import"
    ],
    "globals": {
        "window": true,
        "document": true,
        "navigator": true
    },
    "rules": {
        "max-len": [
            "warn",
            200
        ],
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-param-reassign": "error",
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "ignore"
            }
        ],
        "eqeqeq": "warn",
        "no-underscore-dangle": 0,
        "class-methods-use-this": 0,
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "linebreak-style": 0,
        "no-confusing-arrow": 0,
        "function-paren-newline": [
            "error",
            "never"
        ],
        "object-curly-newline": [
            "error",
            {
                "multiline": true
            }
        ],
        "func-names": 0,
        "import/extensions": ["error", "always"]
    }
}